<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj2"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        >
        <TextView
            android:id="@+id/five_datingname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/five_roon_listview"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/five_create_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao_jvxin"
                android:text="创建房间"/>
            <Button
                android:id="@+id/five_kaoji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/yuanjiao_jvxin"
                android:text="考级"/>
            <Button
                android:id="@+id/five_tiaozhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/yuanjiao_jvxin"
                android:text="挑战"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/five_haoyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="好友"
                android:background="@drawable/but_jianjiao_blue_yellow"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/five_liaotian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:background="@drawable/but_jianjiao_blue_yellow"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/five_yonghu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户"
                android:background="@drawable/but_jianjiao_blue_yellow"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/five_tihuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        </LinearLayout>
    </LinearLayout>



</LinearLayout>