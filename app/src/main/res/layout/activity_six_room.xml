<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@mipmap/bj4">

   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_weight="2">

       <TextView
           android:id="@+id/six_roonname_textview"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           />
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/six_wanjia_recyclerview"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"/>

       <Button
           android:id="@+id/start_game"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/but_yuanjiao_blue_yellow"
           android:text="开始游戏"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/six_haoyou_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="好友"
                android:background="@drawable/but_jianjiao_blue_yellow"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/six_liaotian_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="聊天"
                android:background="@drawable/but_jianjiao_blue_yellow"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/six_diange_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="点歌"
                android:background="@drawable/but_jianjiao_blue_yellow"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/six_yaoqing_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="邀请"
                android:background="@drawable/but_jianjiao_blue_yellow"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/six_tihuan_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>