<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bj2"
    tools:context=".ThirdlyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/bantoumin_blue"
        android:layout_margin="100dp"
        >
        <Button
            android:id="@+id/three_guanwang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/but_yuanjiao_bantouming_blue_yellow"
            android:text="官网"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/three_qvku"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/but_yuanjiao_bantouming_blue_yellow"
            android:text="曲库"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/three_duizhan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/but_yuanjiao_bantouming_blue_yellow"
            android:text="对战"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/three_paihang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/but_yuanjiao_bantouming_blue_yellow"
            android:text="排行"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/three_client"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/but_yuanjiao_bantouming_blue_yellow"
            android:text="用户"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>